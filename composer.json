{
    "name": "iris-ai/sdk",
    "description": "Official PHP SDK for IRIS - AI Agents, Multi-Step Workflows, and Document Management",
    "keywords": ["iris", "ai", "agents", "workflows", "sdk", "api", "neuron", "rag"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "IRIS AI",
            "email": "sdk@iris.ai"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-message": "^1.0|^2.0",
        "symfony/console": "*",
        "vlucas/phpdotenv": "^5.6"
    },
    "bin": ["bin/iris"],
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "IRIS\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IRIS\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit",
        "test:integration": "phpunit tests/Integration --group integration",
        "test:leads": "phpunit tests/Unit/Resources/LeadsResourceTest.php tests/Integration/LeadsIntegrationTest.php",
        "test:config": "phpunit tests/Unit/ConfigTest.php",
        "analyse": "phpstan analyse src --level=8",
        "cs-fix": "php-cs-fixer fix src"
    },
    "extra": {
        "laravel": {
            "providers": [
                "IRIS\\SDK\\Laravel\\IRISServiceProvider"
            ],
            "aliases": {
                "IRIS": "IRIS\\SDK\\Laravel\\Facades\\IRIS"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
